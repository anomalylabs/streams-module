{% set group = table.data.group ?: form.data.group %}
{% set stream = table.model.stream ?: form.model.stream %}

{% if group.slug %}
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">

                {{ group.name }}

                {% if stream.name %}
                    <i class="fa fa-long-arrow-right small"></i> {{ stream.name }}
                {% endif %}

                {% if stream.description %}
                    <br>
                    <small class="text-muted">{{ stream.description }}</small>
                {% elseif group.description %}
                    <br>
                    <small class="text-muted">{{ group.description }}</small>
                {% endif %}

            </h4>
        </div>
    </div>
{% endif %}
