{% set namespace = entries('streams', 'groups').findBySlug(session_get('anomaly.module.streams::namespace')) %}

{% if namespace %}
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">

                {{ namespace.name }}

                {% if namespace.description.value %}
                    <br>
                    <small class="text-muted">{{ namespace.description }}</small>
                {% endif %}

            </h4>
        </div>
    </div>
{% endif %}
